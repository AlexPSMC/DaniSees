{
  "name": "starter",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luuxis/Evoldia-Network-Launcher.git"
  },
  "scripts": {
    "start": "cd src && nw .",
    "postinstall": "(cd src && npm install)",
    "build:win": "gulp pack:win32",
    "build:mac": "gulp pack:osx64",
    "build:linux": "gulp pack:linux{32|64}:deb",
    "build:all": "npm run build:linux && npm run build:mac && npm run build:win"
  },
  "devDependencies": {
    "coffee-script": "^1.9.3",
    "gulp": "^3.8.11",
    "gulp-github-release": "^1.0.3",
    "gulp-load-plugins": "^0.10.0",
    "gulp-node-webkit-builder": "^1.1.1",
    "gulp-uglify": "^1.2.0",
    "merge-stream": "^0.1.7",
    "run-sequence": "^1.1.0",
    "shelljs": "^0.5.0",
    "graceful-fs": "^4.2.2",
    "nw": "^0.48.4-sdk"
  },
  "optionalDependencies": {
    "gulp-appdmg": "^1.0.2"
  }
}
